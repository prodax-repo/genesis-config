[Unit]
Description=Geth Node
After=network-online.target
Wants=network-online.target
[Service]
WorkingDirectory=/root
User=root
ExecStart=/usr/bin/geth --gcmode archive --syncmode full --networkid 24 --rpc --rpcport 8545 --rpcapi "db,eth,net,web3,personal,debug" --rpccorsdomain "*" --rpcvhosts "*"
Restart=always
RestartSec=5s
[Install]
WantedBy=multi-user.target
